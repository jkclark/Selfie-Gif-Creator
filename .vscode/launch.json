  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
    },
    {
      "name": "CLI create",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/primary_adapters/cli.py",
      "args": [
        "create", // mode
        "${workspaceFolder}/work/heics_1", // image_path
        "${workspaceFolder}/work/temp_images", // temp_folder
        "${workspaceFolder}/work/movies/create_output.mp4", // output_path
        "${workspaceFolder}/OpenSans-Regular.ttf" // font_path
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
    },
    {
      "name": "CLI append",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/primary_adapters/cli.py",
      "args": [
        "append", // mode
        "${workspaceFolder}/work/heics_2", // image_path
        "${workspaceFolder}/work/temp_images", // temp_folder
        "${workspaceFolder}/work/movies/create_output.mp4", // movie_path
        "${workspaceFolder}/OpenSans-Regular.ttf", // font_path
        "--output_path",
        "${workspaceFolder}/work/movies/append_output.mp4",
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
    },
  ]
}
